import math

print('The right angle triangle')

print('welcome to Right Angle Triangle Solver ')

side_a = float(input('enter the side a of the right angle triangle: '))

side_b = float(input('enter the side b of the right angle triangle: '))
# finding the hypotenus
side_h = math.sqrt((side_a ** 2) + (side_b ** 2))
side_h = round(side_h, 3)

# finding the area and perimeter of a triangle
area = 0.5 * (side_a * side_b)
peri = (side_b / 2) * side_h
print('the hypotenus is:', side_h)
print('The area is:', area)
print('the perimeter is:', peri)

